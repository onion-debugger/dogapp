<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dog_picture_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="An image of a dog" />

    <TextView
        android:id="@+id/dog_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/lato"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/dog_picture_imageView"
        app:layout_constraintStart_toEndOf="@+id/dog_picture_imageView"
        app:layout_constraintTop_toTopOf="@+id/dog_picture_imageView"
        tools:text="Dog Name" />

    <ImageView
        android:id="@+id/favorite_icon_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/dog_name_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dog_name_textView"
        app:srcCompat="@drawable/icon_outline_favorite_border"
        android:contentDescription="Like Button" />
</androidx.constraintlayout.widget.ConstraintLayout>